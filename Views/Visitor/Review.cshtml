@model ReviewViewModel
@await Html.PartialAsync("_Navbar")

@if (Model.Comment is null)
{
	<div class="container-fluid mt-2">
		<form asp-action="Review" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-floating">
				<textarea asp-for="Comment" style="height:100px;" class="form-control" placeholder="Комментарии"></textarea>
				<label asp-for="Comment"></label>
			</div>
			<div class="d-flex mt-1">
				<div class="form-check mx-1">
					<input type="radio" class="form-check-input" asp-for="Mark" value="1" />
					<label asp-for="Mark">1</label>
				</div>
				<div class="form-check mx-1">
					<input type="radio" class="form-check-input" asp-for="Mark" value="2" />
					<label asp-for="Mark">2</label>
				</div>
				<div class="form-check mx-1">
					<input type="radio" class="form-check-input" asp-for="Mark" value="3" />
					<label asp-for="Mark">3</label>
				</div>
				<div class="form-check mx-1">
					<input type="radio" class="form-check-input" asp-for="Mark" value="4" />
					<label asp-for="Mark">4</label>
				</div>
				<div class="form-check mx-1">
					<input type="radio" class="form-check-input" asp-for="Mark" value="5" />
					<label asp-for="Mark">5</label>
				</div>
			</div>
			<input hidden asp-for="HistoryId" value="@Model.HistoryId" />
			<div>
				<button type="submit" class="btn btn-primary">Отправить</button>
			</div>
		</form>
	</div>
}
else
{
	<div class="container-fluid mt-2">
		<textarea asp-for="Comment" class="form-control"></textarea>
		<label>Оценка: @Model.Mark</label>
	</div>
}
