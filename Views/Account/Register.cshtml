@model RegisterViewModel

<div class="row vh-100 justify-content-center align-items-center">
	<div class="col-12 col-sm-6 col-md-4">
		<h3>Регистрация</h3>
		<form asp-action="Register" asp-controller="Account" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-floating">
				<input asp-for="UserName" class="form-control" placeholder="Имя пользователя" />
				<label asp-for="UserName"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="Password" class="form-control" placeholder="Пароль" />
				<label asp-for="Password"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="PasswordConfirm" class="form-control" placeholder="Подтверждение пароля" />
				<label asp-for="PasswordConfirm"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="FirstName" class="form-control" placeholder="Имя" />
				<label asp-for="FirstName"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="LastName" class="form-control" placeholder="Фамилия" />
				<label asp-for="LastName"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="MiddleName" class="form-control" placeholder="Отчество" />
				<label asp-for="MiddleName"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="Email" class="form-control" placeholder="Email" />
				<label asp-for="Email"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="PhoneNumber" class="form-control" placeholder="Телефон" />
				<label asp-for="PhoneNumber"></label>
			</div>
			<div class="d-grid mt-1">
				<button class="btn btn-primary">Зарегистрироваться</button>
			</div>
		</form>
	</div>
</div>
