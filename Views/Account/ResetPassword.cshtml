@model ResetPasswordViewModel
@await Html.PartialAsync("_Navbar")

<div class="mt-2">
	<form asp-action="ResetPassword" asp-controller="Account" method="post">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-floating">
			<input asp-for="Username" class="form-control" placeholder="Имя пользователя" />
			<label asp-for="Username">Имя пользователя</label>
		</div>
		<div class="form-floating mt-1">
			<input asp-for="NewPassword" class="form-control" placeholder="Пароль" />
			<label asp-for="NewPassword">Пароль</label>
		</div>
		<div class="form-floating mt-1">
			<input asp-for="NewPasswordConfirm" class="form-control" placeholder="Пароль" />
			<label asp-for="NewPasswordConfirm">Повторите пароль</label>
		</div>
		<input asp-for="Token" type="hidden" />
		<div class="mt-1">
			<button type="submit" class="btn btn-primary">Готово</button>
		</div>
	</form>
</div>