@model RegisterVisitorViewModel

<div class="row vh-100 justify-content-center align-items-center">
	<div class="col-12 col-sm-4 col-md-4">
		<h3>Регистрация посетителя</h3>
		<form asp-action="RegisterVisitor" asp-controller="HotelAdmin" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input hidden asp-for="VisitorId" value="@Model.VisitorId" />
			<div class="form-floating">
				<input asp-for="FirstName" class="form-control" placeholder="Имя" />
				<label asp-for="FirstName"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="LastName" class="form-control" placeholder="Фамилия" />
				<label asp-for="LastName"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="MiddleName" class="form-control" placeholder="Отчество" />
				<label asp-for="MiddleName"></label>
			</div>
			<div class="form-check mt-1">
				<input type="radio" asp-for="Gender" value="Мужской" class="form-check-input" />
				<label class="form-check-label">Мужской</label>
			</div>
			<div class="mt-1">
				<input type="radio" asp-for="Gender" value="Женский" class="form-check-input" />
				<label class="form-check-label">Женский</label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="SeriaNumber" class="form-control" placeholder="Серия" />
				<label asp-for="SeriaNumber"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="PlaceOfBirth" class="form-control" placeholder="Место рождения" />
				<label asp-for="PlaceOfBirth"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="PlaceOfResidence" class="form-control" placeholder="Место рождения" />
				<label asp-for="PlaceOfResidence"></label>
			</div>
			<div class="form-group mt-1">
				<label asp-for="DateOfBirth" class="form-label"></label>
				<input asp-for="DateOfBirth" class="form-control" />
			</div>
			<div class="form-group mt-1">
				<label asp-for="DateOfIssue" class="form-label"></label>
				<input asp-for="DateOfIssue" class="form-control" />
			</div>
			<div class="form-group mt-1">
				<label asp-for="ExpirationDate" class="form-label"></label>
				<input asp-for="ExpirationDate" class="form-control" />
			</div>
			<div class="d-grid mt-1">
				<button type="submit" class="btn btn-primary">Добавить</button>
			</div>
		</form>
	</div>
</div>