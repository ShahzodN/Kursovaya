@model List<Employee>
@await Html.PartialAsync("_Navbar")

<div class="container">
	<a asp-action="CreateEmployee" class="btn btn-primary mt-2">
		<svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
			<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
		</svg>
		Добавить
	</a>
	<div style="width: 50%">
		<table class="table table-striped mt-2">
			<thead>
				<tr>
					<th>#</th>
					<th>Фамилия, Имя</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Model.Count; i++)
				{
					<tr>
						<th scope="row">@(i + 1)</th>
						<td>@($"{Model[i].LastName} {Model[i].FirstName}")</td>
						<td>
							<a asp-action="GetEmployee" asp-route-id="@Model[i].Id" class="btn btn-dark">
								<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
									<path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
								</svg>
							</a>
						</td>
						<td>
							<form asp-action="DeleteEmployee" method="post">
								<input type="number" name="id" value="@Model[i].Id" hidden/>
								<button class="btn btn-dark">
									<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" class="bi bi-trash-fill" viewBox="0 0 16 16">
										<path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
									</svg>
								</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>