@model CreateHotelViewModel

<div class="row vh-100 justify-content-center align-items-center">
	<div class="col-12 col-sm-4 col-md-4">
		<h3>Регистрация гостиницы</h3>
		<form asp-action="CreateHotel" asp-controller="AppAdmin" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly"></div>
			<div class="form-floating">
				<input asp-for="Name" class="form-control" placeholder="Название" />
				<label asp-for="Name"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="Address" class="form-control" placeholder="Адрес" />
				<label asp-for="Address"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="Email" class="form-control" placeholder="Email" />
				<label asp-for="Email"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="PhoneNumber" class="form-control" placeholder="Номер телефона" />
				<label asp-for="PhoneNumber"></label>
			</div>
			<div class="form-floating mt-1">
				<input asp-for="DistanceFromCenter" class="form-control" placeholder="Расстояние от центра" />
				<label asp-for="DistanceFromCenter"></label>
			</div>
			<div class="form-group mt-1">
				<select asp-for="CityId" asp-items="Html.ViewBag.Cities" class="form-select">
					<option selected>--Выберите город--</option>
				</select>
			</div>
			<div class="form-check form-switch">
				<input asp-for="HasFreeWiFi" class="form-check-input"/>
				<label class="form-check-label">Бесплатный Wi-Fi</label>
			</div>
			<div class="form-check form-switch">
				<input asp-for="HasParkingLot" class="form-check-input" />
				<label class="form-check-label">Парковка</label>
			</div>
			<div class="form-check form-switch">
				<input asp-for="IsPetFriendly" class="form-check-input" />
				<label class="form-check-label">Можно с питомцами</label>
			</div>
			<div class="d-grid mt-1">
				<button type="submit" class="btn btn-primary">Добавить</button>
			</div>
		</form>
	</div>
</div>